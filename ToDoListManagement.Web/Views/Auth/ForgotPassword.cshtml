@model ToDoListManagement.Entity.ViewModel.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Forgot Password";
}

<div class="card-body login-card-body">
    <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>

    <form asp-controller="Auth" asp-action="SendResetPasswordEmail" method="post">
        <div class="input-group">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
            <div class="input-group-text"><span class="bi bi-envelope"></span></div>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>

        <div class="row mt-3">
            <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block">Request new password</button>
            </div>
        </div>
    </form>

    <p class="mt-3 mb-1">
        <a asp-controller="Auth" asp-action="Login">Login</a>
    </p>
    <p class="mb-0">
        <a asp-controller="Auth" asp-action="Register" class="text-center">Register a new membership</a>
    </p>
</div>
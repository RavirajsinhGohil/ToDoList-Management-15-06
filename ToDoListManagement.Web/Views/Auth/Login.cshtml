@model ToDoListManagement.Entity.ViewModel.LoginViewModel

@{
  Layout = "~/Views/Shared/_AuthLayout.cshtml";
  ViewData["Title"] = "Login";
}

<div class="card-body login-card-body">
  <p class="login-box-msg">Login in to start your session</p>
  <form asp-controller="Auth" asp-action="Login" method="post">

    <div class="input-group">
      <input type="email" id="email" class="form-control" placeholder="Email*" asp-for="Email" />
      <div class="input-group-text"><span class="bi bi-envelope"></span></div>
    </div>
    <span asp-validation-for="Email" class="text-danger"></span>

    <div class="input-group mt-3">
      <input type="password" class="form-control" placeholder="Password*" asp-for="Password" >
      @* <i class="fa-solid fa-eye"></i> *@
      </input>
      <div class="input-group-text"><span class="bi bi-lock-fill"></span></div>
    </div>
    <span asp-validation-for="Password" class="text-danger"></span>

    <div class="row mt-3">
      <div class="col-8">
        <div class="form-check" >
          <input asp-for="RememberMe" class="form-check-input " style="cursor: pointer;" type="checkbox" id="RememberMe" />
          <label class="form-check-label" for="RememberMe" style="cursor: pointer;" > Remember Me </label>
        </div>
      </div>
      <div class="col-4">
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
      </div>
    </div>
  </form>

  <p class="mb-1"><a href="#" id="forgotPasswordLink">I forgot my password</a></p>
  <p class="mb-0">
    <a asp-controller="Auth" asp-action="Register" class="text-center"> Register a new membership </a>
  </p>
</div> 

<script src="~/js/LoginView.js"></script>
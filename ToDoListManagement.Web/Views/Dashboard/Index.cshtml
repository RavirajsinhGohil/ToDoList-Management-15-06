@using ToDoListManagement.Entity.ViewModel
@model ToDoListManagement.Entity.ViewModel.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-2">

    <div id="projectList" class="d-flex justify-content-between my-4">

        <h2>Projects</h2>

        @if (User.IsInRole("Admin"))
        {
            <button class="btn btn-block btn-secondary text-white" id="addProjectButton" data-bs-toggle="modal"
                data-bs-target="#addProjectModal">
                <span class="fw-bold">+</span> Add Project
            </button>
        }
    </div>

    <div class="card">
        <div class="card-body ">
            <table class="table table-striped projects" id="projectTable">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                            Project Name
                        </th>
                        <th style="width: 10%">
                            Program Manager
                        </th>
                        <th style="width: 25%">
                            Team Members
                        </th>
                        <th>
                            Project Progress
                        </th>
                        <th style="width: 8%" class="text-center">
                            Status
                        </th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th style="width: 15%">
                                Action
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (ProjectViewModel? project in Model.Projects)
                    {
                        <tr>
                            <td class="text-center" data-order="@project.ProjectId">
                                #@project.ProjectId
                            </td>
                            <td>
                                <a>
                                    @project.ProjectName
                                </a>
                                <br />
                                <small>
                                    Started On: @project.StartDate.ToString("dd-MM-yyyy HH:mm")
                                </small>
                            </td>
                            <td>
                                @if (project.AssignedToPM != null)
                                {
                                    Random randomNumber = new Random();
                                    string randomColor = $"#{randomNumber.Next(0x1000000):X6}";

                                    <li class="list-inline-item rounded-circle"
                                        style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; background-color: @randomColor; 
                                            cursor: pointer;"
                                        title="@project.PMName">
                                        @project.PMName.Substring(0, 1).ToUpper()
                                    </li>
                                }
                                else
                                {
                                    <span class="text-secondary">Not Assigned</span>
                                }
                            </td>
                            <td>
                                <ul class="list-inline d-flex ">
                                    @foreach (var member in project.Users)
                                    {
                                        Random randomNumber = new Random();
                                        string randomColor = $"#{randomNumber.Next(0x1000000):X6}";

                                        <li class="list-inline-item rounded-circle"
                                            style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; background-color: @randomColor; cursor: pointer;"
                                            title="@member.Name">
                                            @member.Name.Substring(0, 1).ToUpper()
                                        </li>
                                    }
                                </ul>
                            </td>
                            <td class="project_progress">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-green" role="progressbar" aria-valuenow="57"
                                        aria-valuemin="0" aria-valuemax="100" style="width: 57%">
                                    </div>
                                </div>
                            </td>
                            <td class="project-state text-center">
                                @switch (project.Status)
                                {
                                    case "Active":
                                        <span class="badge badge-success">Active</span>
                                        break;
                                    case "Completed":
                                        <span class="badge badge-primary">Completed</span>
                                        break;
                                    case "Cancelled":
                                        <span class="badge badge-danger">Cancelled</span>
                                        break;
                                    default:
                                        <span class="badge badge-secondary text-dark">Unknown</span>
                                        break;
                                }
                            </td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td class="project-actions text-right">
                                    <button class="btn btn-info btn-sm text-white"
                                        onclick="openEditProjectModal(@project.ProjectId)">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </button>
                                    <button class="btn btn-danger btn-sm"
                                        onclick="openDeleteProjectModal('@project.ProjectId')">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </button>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Project Modal -->
<div class="modal fade" id="addProjectModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="addProjectForm" asp-controller="Project" asp-action="AddProject" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Project
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input asp-for="Project.ProjectName" type="text" class="form-control"
                            id="validationCustomUsername" placeholder="Name">
                        <label for="categoryname">Name*</label>
                        <span asp-validation-for="Project.ProjectName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="addCategoryDescription" placeholder="Description"
                            asp-for="Project.Description" style="height: 90px;"></textarea>
                        <label for="addCategoryDescription">Description</label>
                    </div>
                    <div class="form-floating">
                        <select class="form-select" id="pMAssignedTo" asp-for="Project.AssignedToPM"
                            asp-items="@(Model.ProjectManagers.Select(u => new Microsoft.AspNetCore.Mvc.Rendering.SelectListItem { Value = u.UserId.ToString(), Text = u.Name }))"
                            aria-label="Assigned To">
                            <option value="">Select User</option>
                        </select>
                        <label for="pMAssignedTo">Assign PM</label>
                    </div>
                </div>

                <div class="modal-footer d-flex justify-content-center px-0">
                    <button type="submit" class="btn navbar-color text-white btn-secondary">Save</button>
                    <button type="button" class="btn cancel-btn-color ms-1 btn-outline-secondary"
                        data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Update Project Modal -->
<div class="modal fade" id="updateProjectModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="editProjectForm" asp-controller="Project" asp-action="UpdateProject" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Update Project
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editProjectId" asp-for="Project.ProjectId" />
                    <div class="form-floating mb-3">
                        <input asp-for="Project.ProjectName" type="text" class="form-control" id="editProjectName"
                            placeholder="Name">
                        <label for="categoryname">Name*</label>
                        <span asp-validation-for="Project.ProjectName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="editProjectDescription" placeholder="Description"
                            asp-for="Project.Description" style="height: 90px;"></textarea>
                        <label for="addCategoryDescription">Description</label>
                    </div>
                    <button type="button" class="btn btn-dark">+ Assign Members</button>
                </div>
                <div class="modal-footer d-flex justify-content-center px-0">
                    <button type="submit" class="btn navbar-color text-white btn-secondary">Save</button>
                    <button type="button" class="btn cancel-btn-color ms-1 btn-outline-secondary"
                        data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Project Modal -->
<div class="modal fade" id="deleteProjectModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered justify-content-center custom-modal-size">
        <div class="modal-content ">
            <div class="modal-header border-none">
                <h5 class="modal-title text-center" id="exampleModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center d-flex align-items-center justify-content-center flex-column">
                <div class="d-flex align-items-center justify-content-center">
                    <img src="~/images/toppng.com-warning-icon-2400x2400.png"
                        style="height: 100px !important; width: 100px; !important"></img>
                </div>
                <div>Are you sure you want to delete this Project?</div>
            </div>
            <div class="modal-footer border-none pt-0 d-flex justify-content-center">
                <div class="mt-3">
                    <a href="#" id="deleteProjectLink" class="btn btn-danger btn-flat">Yes</a>
                    <button type="button" class="btn bg-white border-danger text-danger ms-1"
                        data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
</link>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="~/js/DashboardView.js"></script>
</script>